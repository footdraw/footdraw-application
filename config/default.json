{
	"routes" : [
		{
			"path" : "/",
			"view" : "room",
			"type"	: "page",
			"extension" : "html"
		},
		{
			"path" : "/assets/:param",
			"view" : "",
			"type"	: "file",
			"extension" : "js"
		}
	],
	"socket" : true,
	"events" : [
		{
			"listener" : "draw_line",
			"method"   : "messenger::draw_line"
		},
		{
			"listener" : "leave",
			"method"   : "messenger::leave"
		},
		{
			"listener" : "subscribe",
			"method"   : "room::subscription"
		},
		{
			"listener" : "play_clicked",
			"method"   : "room::start"
		},
	  {
		"listener" : "answer",
		"method" : "messenger::answer"
	  }
	],

  "key": [{ "secret" : "1234567890QWERTY"}]
}